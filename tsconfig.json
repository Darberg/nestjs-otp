{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",            // If using ES module syntax
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "lib": ["ES6"],      // Ensures Node.js types are included
      "moduleResolution": "nodenext",  // Enable support for Node.js ES module resolution
      "resolveJsonModule": true,     // Optional: If using .json files in your code
      "types": ["node"]              // Ensure Node.js types are used explicitly
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  